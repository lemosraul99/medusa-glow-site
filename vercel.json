{
  "version": 2,
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.js", 
      "use": "@vercel/static"
    },
    {
      "src": "**/*.xml",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.txt",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/comparativas/(.*)",
      "dest": "/comparativas/$1"
    },
    {
      "src": "/finanzas/(.*)",
      "dest": "/finanzas/$1"
    },
    {
      "src": "/guias/(.*)",
      "dest": "/guias/$1"
    },
    {
      "src": "/tutoriales/(.*)",
      "dest": "/tutoriales/$1"
    },
    {
      "src": "/herramientas/(.*)",
      "dest": "/herramientas/$1"
    },
    {
      "src": "/legal/(.*)",
      "dest": "/legal/$1"
    },
    {
      "src": "/(ads.txt|sitemap.xml|robots.txt|analytics.js|adsense-loader.js)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
